{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": [
    "server.ts",
    "netlify/functions/**/*",
    "routes/**/*",
    "config/**/*",
    "src/**/*",
    "types/**/*"
  ]
}
